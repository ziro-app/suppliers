{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "es2019",
        "es2017",
        "es7",
        "es6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "allowJs": true,
      "resolveJsonModule": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "src/main/test/cypress"
    ]
  }
